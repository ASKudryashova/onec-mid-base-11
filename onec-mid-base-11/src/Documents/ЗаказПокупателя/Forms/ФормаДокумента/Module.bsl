	// *****
	//Kudryashova: Проверка общего % скидок 
	//РассчитатьСуммуСтроки(ТекущиеДанные);
	Если ТекущиеДанные.Скидка + Объект.АК_СогласованнаяСкидка > 100 Тогда
		ТекущиеДанные.Сумма = 0;
		ИмяТаблицы = Элементы.Товары.Имя;
		НомерСтроки = ТекущиеДанные.НомерСтроки - 1;
		НоменклатурнаяПозиция = ТекущиеДанные.Номенклатура;
		ВывестиСообщениеОПревышенииСкидки(ИмяТаблицы, НомерСтроки, НоменклатурнаяПозиция);
	Иначе
		РассчитатьСуммуСтроки(ТекущиеДанные);
	КонецЕсли;
	// *****
	
КонецПроцедуры

